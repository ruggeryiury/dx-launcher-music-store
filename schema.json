{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "packages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "version": {
            "type": "number",
            "minimum": 1
          },
          "dta": {
            "type": "string",
            "format": "uri"
          },
          "downloadXbox": {
            "type": "string",
            "format": "uri"
          },
          "downloadPS3": {
            "type": "string",
            "format": "uri"
          },
          "downloadWii": {
            "type": "string",
            "format": "uri"
          },
          "thumbnail": {
            "type": "string",
            "format": "uri"
          },
          "markdown": {
            "type": ["string", "null"],
            "format": "uri"
          }
        },
        "required": [
          "name",
          "version",
          "dta",
          "downloadXbox",
          "thumbnail",
          "markdown"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": ["$schema", "packages"],
  "additionalProperties": false
}
